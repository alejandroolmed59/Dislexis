<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dislexisapp.dislexis.activities.AboutActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Uso de la aplicacion"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_text"/>
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="Modo Diagnostico"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@color/primaryDarkColor"
            android:src="@drawable/diagnostic_screen"
            />
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="Modo Prueba"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@color/primaryDarkColor"
            android:src="@drawable/test_screen"
            />

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="Informacion de paciente"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@color/primaryDarkColor"
            android:src="@drawable/paciente_screen"
            />

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="Desarrolladores"/>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="JOSE ALEJANDRO OLMEDO ARANIVA "/>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="CESAR ALEJANDRO ROSALES CRUZ "/>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="CRISTIAN ALEXANDER MUNDO ORELLANA "/>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="XD"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>