<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dislexisapp.dislexis.activities.AboutActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="@string/text_use"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="@string/text_recom"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/texto_explain"/>
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_margin="@dimen/text_margin"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="@string/modo_diagnostico"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@color/secondaryColor"
            android:src="@drawable/diagnostic_screen" />
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="@string/modo_prueba"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@color/secondaryColor"
            android:src="@drawable/test_screen"
            />

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="@string/informacion_de_paciente"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@color/secondaryColor"
            android:src="@drawable/paciente_screen"
            />

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="@string/desarrolladores"/>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="@string/nombre1"/>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="@string/nombre2"/>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="@string/nombre3"/>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_margin="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:text="XD"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>