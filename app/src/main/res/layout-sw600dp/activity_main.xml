<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:visibility="invisible"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context="com.dislexisapp.dislexis.activities.MainActivity">


    <RelativeLayout
        android:layout_width="650dp"
        android:layout_height="694dp"
        android:layout_centerInParent="true"
        android:background="#fff"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="630dp"
            android:layout_height="640dp"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <ImageView
                android:id="@+id/login_title"
                android:layout_width="160dp"
                android:layout_height="151dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_logo_nice" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="400dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_user"
                    android:drawableTint="#FF4081"
                    android:hint="User Name"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="400dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/ic_action_pass"
                    android:drawableTint="#FF4081"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/textViewLogin"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="@drawable/btn_fondo_color2"
                android:text="Sign in"
                android:textAllCaps="false"
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¿No tienes cuenta?"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/textViewRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:text="Registrate"
                    android:textColor="@color/primaryTextColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_about"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/goToAboutUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Indicaciones"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>